<%= render "layouts/errors", :object => @entry %>

<%=form_for(@entry, html: {class: "form-group"}) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control handwritten" %>
  <%= f.label :body %>
  <br>
  <%= f.text_area :body, rows: "12", cols: "40", class: "handwritten" %>
  <br>
  <%= f.submit "Store", class: "btn btn-primary"  %>
<% end %>
