<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6 well">
    <div class="page-header">
      <h1>Add a thought</h1>
    </div>
    <%=form_for(Entry.new, html: {class: "form-group"}) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :body %>
      <br>
      <%= f.text_area(:body, size: "60x12") %>
      <br>
      <%= f.submit "Add thought", class: "btn btn-primary"  %>
    <% end %>
  </div>
  <div class="col-sm-3"></div>
</div>
